@{
    Layout = "_Layout";
}

@model PierreS_STreat.Models.Treat;

<h3>@User.Identity.Name</h3>
<h4>Add a New Treat</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    <br>
    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")
    <br>
    <input type="submit" value="Add new treat" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all treats", "Index", "Treats")</p>