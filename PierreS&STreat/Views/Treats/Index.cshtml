@{
    Layout = "_Layout";
}

@using PierreS_STreat.Models;
@model List<PierreS_STreat.Models.Treat>;

<h1>Current Treats:</h1>
<h2>Current User @User.Identity.Name</h2>

@if (@Model.Count == 0)
{
    <h3>You have not added any Flavors yet.</h3>
}

@foreach (Treat treat in Model)
{
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
}


<p>@Html.ActionLink("Add a Treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>