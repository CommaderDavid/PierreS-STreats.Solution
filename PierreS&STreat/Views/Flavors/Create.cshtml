@{
    Layout = "_Layout";
}

@model PierreS_STreat.Models.Flavor;

<h3>@User.Identity.Name</h3>
<h4>Add a New Flavor</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")
    <br>
    <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all flavors", "Index", "Flavors")</p>